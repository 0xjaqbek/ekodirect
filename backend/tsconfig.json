{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
       "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
    },
    "include": ["backend/**/*", "src/**/*"],
    "exclude": ["node_modules", "dist"]
  }