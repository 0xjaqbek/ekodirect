// backend/tsconfig.json
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "../", // Change this to point to the project root
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "..",  // Set this to project root
      "paths": {
        "@shared/*": ["src/shared/*"]  // Add path mapping for shared
      }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }